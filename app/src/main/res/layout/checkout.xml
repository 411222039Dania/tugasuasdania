<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/namabarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Madeline Bag] BOSTANTEN BAG 3 IN 1  WANITA Slingbag"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/Aalamatpengiriman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dania Berlyana (+62) 877-1234-9987



         Jl lanbau perum griya anggraini blok D9/ nomor 4 RT 24/ RW 03, CITEREUP, KAB.BOGOR, JAWA BARAT"
        android:textSize="15sp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Pesanan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/orderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Tas: Rp.275.00\nVoucher Diskon Rp.5.00\nOngkos Kirim Rp.15.00\nTota Rp.285.00"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/confirmOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:background="@color/design_default_color_secondary_variant"
    android:textColor="@android:color/black" />

</LinearLayout>